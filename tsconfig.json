{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true,
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "dom",
      "esNext",
      "scripthost",
      "es2015.proxy"
    ],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
